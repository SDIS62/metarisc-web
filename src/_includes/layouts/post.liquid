---
layout: layouts/home.liquid
templateClass: tmpl-post
---

<div class="bg-gray">
  <section class="py-2 text-center container mb-4" style="border-bottom: 3px solid #4EB9A8">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-medium">{{ title }}</h1>
        <p class="lead">{{ description }}</p>
        <p>Post√© le {{ page.date | date: "%b %d, %y" }}</p>
        {% for tag in tags | filterTagList %}
          {% capture tagUrl %}/tags/{{ tag | slugify }}/{% endcapture %}
          <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
        {% endfor %}
        <img
          src="{{image_url | url}}"
          width="100%"
          class="mt-4">
      </div>
    </div>
  </section>

  <div class="post row">
    <div class="col-1"></div>
    <div class="col-10">
      {{ content }}
    </div>
  </div>
</div>