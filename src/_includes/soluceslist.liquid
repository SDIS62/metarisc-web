{% for soluce in soluces %}

  <div class="col soluce bg-snow">
    <a href="{{ soluce.path }}">
      <div class="card bg-transparent w-100 hidden">
        <div class="card-body pb-1">
          <div class="row">
            <div class="col-2">
              <i class="bi bi-inboxes-fill"></i>
            </div>
            <div class="col-7 mt-auto">
              <h5 class="card-title text-light text-truncate">{{ soluce.title }}</h5>
            </div>
            <div class="col-3 d-flex justify-content-end">
              <i class="bi bi-arrow-right-short"></i>
            </div>
          </div>
        </div>
        <div class="row gx-0 justify-content-end d-sm-flex d-none">
          <img
            src="{{ soluce.img_url | url }}"
            class="card-img h-100"
            alt="picto">
        </div>
      </div>
    </a>
  </div>

{% endfor %}